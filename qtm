#!/bin/bash
# Queztl Training Manager (QTM) - Wrapper script for easy execution

# Check if running in Docker or host
if [ -f /.dockerenv ]; then
    # Inside Docker
    python3 /workspace/training_manager.py "$@"
else
    # On host - execute inside Docker container
    docker exec -it hive-backend-1 python3 /workspace/training_manager.py "$@"
fi
